<project>

	<target name="common">
		<mkdir dir="bin" />
	</target>
		
	<target name="cache">
		<javac srcdir="src/com/urv/storlet/cache" destdir="bin" includeantruntime="false">
			<classpath>
		        <pathelement 
		        	path="lib/SCommon.jar"/>
			</classpath>
		</javac>

	     <jar destfile="bin/cache-1.0.jar" 
	          basedir="bin"
	     	  includes="com/urv/storlet/cache/*">
	     </jar>
	</target>
	
	<target name="clean">
		<delete dir="bin" />
	</target>
	
	<target name="build" depends="clean, common, cache"/>

</project>
